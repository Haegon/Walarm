<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:weightSum="1"
    android:background="@drawable/button_state">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/image_afternoon"
        android:src="@drawable/w_day" />


    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <com.gohn.walarm.Extention.TextViewEx
            android:id="@+id/alarm_time"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="00:00"
            android:textSize="55dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:baselineAligned="false"
            android:layout_gravity="center_horizontal">

            <com.gohn.walarm.Extention.TextViewEx
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일"
                android:id="@+id/text_day_1"
                android:textSize="20dp"
                android:gravity="bottom" />
            <com.gohn.walarm.Extention.TextViewEx
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월"
                android:id="@+id/text_day_2"
                android:textSize="20dp"
                android:gravity="bottom" />
            <com.gohn.walarm.Extention.TextViewEx
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="화"
                android:id="@+id/text_day_3"
                android:textSize="20dp"
                android:gravity="bottom" />
            <com.gohn.walarm.Extention.TextViewEx
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수"
                android:id="@+id/text_day_4"
                android:textSize="20dp"
                android:gravity="bottom" />
            <com.gohn.walarm.Extention.TextViewEx
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목"
                android:id="@+id/text_day_5"
                android:textSize="20dp"
                android:gravity="bottom" />
            <com.gohn.walarm.Extention.TextViewEx
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="금"
                android:id="@+id/text_day_6"
                android:textSize="20dp"
                android:gravity="bottom" />
            <com.gohn.walarm.Extention.TextViewEx
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="토"
                android:id="@+id/text_day_7"
                android:textSize="20dp"
                android:gravity="bottom" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <CheckBox
            android:id="@+id/cbAlarm"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="false"
            android:button="@drawable/onoff"
            android:gravity="center_vertical" />

        <com.gohn.walarm.Extention.TextViewEx
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Name"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:gravity="bottom"
            android:baselineAligned="false"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</LinearLayout>