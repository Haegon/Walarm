                        android:layout_alignLeft="@+id/btn_weather_1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/w_day" />

                    <com.gohn.walarm.Extention.TextViewEx
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="벨소리 1"
                        android:id="@+id/text_ring_1"
                        android:layout_centerVertical="true"
                        android:layout_alignRight="@+id/btn_weather_1"
                        android:layout_alignEnd="@+id/btn_weather_1"
                        android:paddingRight="20dp" />
