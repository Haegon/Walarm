                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="비"
                        android:id="@+id/text_weather_2"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentBottom="false"
                        android:gravity="center_vertical"
                        android:layout_alignLeft="@+id/btn_weather_2"
                        android:layout_centerVertical="true"
                        android:paddingLeft="20dp"
                        android:textSize="30dp" />

                    <com.gohn.walarm.Extention.TextViewEx
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="벨소리 2"
                        android:id="@+id/text_ring_2"
                        android:layout_centerVertical="true"
                        android:layout_alignRight="@+id/btn_weather_2"
                        android:layout_alignEnd="@+id/btn_weather_2"
                        android:paddingRight="20dp" />
                </RelativeLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
