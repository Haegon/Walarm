                        android:id="@+id/text_ring_5"
                        android:layout_centerVertical="true"
                        android:layout_alignRight="@+id/btn_weather_5"
                        android:layout_alignEnd="@+id/btn_weather_5"
                        android:paddingRight="20dp" />
                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>