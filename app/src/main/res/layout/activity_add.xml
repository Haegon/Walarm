<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gohn.walarm.Activity.AddActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timePicker_add"
            android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">


        <ToggleButton
            android:layout_width="@dimen/day_length"
            android:layout_height="wrap_content"
            android:textOn="일"
            android:textOff="일"
            android:id="@+id/tb_sunday" />
        <ToggleButton
            android:layout_width="@dimen/day_length"
            android:layout_height="wrap_content"
            android:textOn="월"
            android:textOff="월"
            android:id="@+id/tb_monday" />
        <ToggleButton
            android:layout_width="@dimen/day_length"
            android:layout_height="wrap_content"
            android:textOn="화"
            android:textOff="화"
            android:id="@+id/tb_tuesday" />
        <ToggleButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textOn="수"
            android:textOff="수"
            android:id="@+id/tb_wednesday" />
        <ToggleButton
            android:layout_width="@dimen/day_length"
            android:layout_height="wrap_content"
            android:textOn="목"
            android:textOff="목"
            android:id="@+id/tb_thursday" />
        <ToggleButton
            android:layout_width="@dimen/day_length"
            android:layout_height="wrap_content"
            android:textOn="금"
            android:textOff="금"
            android:id="@+id/tb_friday" />
        <ToggleButton
            android:layout_width="@dimen/day_length"
            android:layout_height="wrap_content"
            android:textOn="토"
            android:textOff="토"
            android:id="@+id/tb_saturday" />

    </LinearLayout>



    </LinearLayout>


</RelativeLayout>
